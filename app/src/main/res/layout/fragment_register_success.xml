<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_top_white"
    android:orientation="vertical"
    android:padding="32dp">


    <TextView
        android:id="@+id/welcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/iciel_gotham_medium"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_19sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_14dp"
        android:fontFamily="@font/iciel_gotham_medium"
        android:gravity="center"
        android:text="Your account has been successfully created"
        android:textColor="@color/green"
        android:textSize="@dimen/text_size_14sp" />


    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_24dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/gotham_medium"
        android:gravity="center"
        android:text="CONTINUE"
        android:textColor="@color/black_light"
        android:textStyle="bold" />

</LinearLayout>