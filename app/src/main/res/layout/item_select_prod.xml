<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_size_20dp"
            android:paddingEnd="@dimen/margin_size_20dp">


            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/productImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/curved_white_yellow_border"
                android:padding="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_size_12dp"
                android:layout_toStartOf="@id/checkbox"
                android:layout_toEndOf="@id/productImage"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/homepagebaukasten_bold"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="Save 24%"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_6dp"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="(Incl. of all taxes)"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/tvOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="Rs 340"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp" />

                    <TextView
                        android:id="@+id/tvSpecialPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_6dp"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="Rs 340"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:background="@drawable/curved_green"
                        android:fontFamily="@font/iciel_gotham_medium"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_size_10sp"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/margin_size_8dp"
                        android:background="@drawable/curved_red"
                        android:fontFamily="@font/iciel_gotham_medium"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/checkbox"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_6dp"
                android:src="@drawable/checkbox_empty"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

</layout>