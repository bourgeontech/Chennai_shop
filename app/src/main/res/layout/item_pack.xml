<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_white_yellow_border"
            android:padding="@dimen/margin_size_20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/iciel_gotham_medium"
                    android:maxLines="1"
                    android:text="Product Name"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_size_16sp" />


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="1"
                    android:text="Fresh Item"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="1"
                    android:text="Quantity : 12 Kg"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/homepagebaukasten_book"
                    android:maxLines="1"
                    android:text="Original Price: ₹10, Special Price ₹15, Discount 10%"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/text_size_12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imgDeletePack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delete_icon" />

        </RelativeLayout>


    </RelativeLayout>

</layout>