<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.online.estore.activity.ChangePassword">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/loginImage"
                android:layout_width="match_parent"
                android:layout_height="270dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yellow_ring_bg"
                    android:scaleType="centerCrop" />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="@dimen/margin_size_20dp"
                    android:src="@drawable/login_bg2" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginImage"
                android:layout_marginStart="@dimen/margin_size_24dp"
                android:layout_marginTop="-90dp"
                android:layout_marginEnd="24dp"
                android:overScrollMode="never"
                app:cardCornerRadius="60dp"
                app:cardElevation="@dimen/margin_size_8dp"
                app:cardUseCompatPadding="true">


                <!--            <LinearLayout-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="@dimen/margin_size_24dp"-->
                <!--                android:layout_marginTop="-60dp"-->
                <!--                android:layout_marginEnd="@dimen/margin_size_24dp"-->
                <!--                android:background="@drawable/card_bg"-->
                <!--                android:paddingBottom="@dimen/margin_size_24dp">-->

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_size_32dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:paddingTop="@dimen/margin_size_16dp"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:paddingTop="@dimen/padding_size_16dp"
                        android:paddingBottom="@dimen/margin_size_24dp">



                        <RelativeLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_size_12dp"
                            android:background="@drawable/line_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/passwordImage"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_size_10dp"
                                android:src="@drawable/lock_icon"
                                app:tint="#B8B8B8" />

                            <EditText
                                android:id="@+id/p1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/showPassword"
                                android:layout_toEndOf="@id/passwordImage"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/iciel_gotham_medium"
                                android:hint="Old Password"
                                android:inputType="textPassword"
                                android:maxLength="16"
                                android:maxLines="1"
                                android:padding="12dp"
                                android:textSize="@dimen/text_size_14sp" />


                            <ImageView
                                android:id="@+id/showPassword"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/padding_6dp"
                                android:layout_marginEnd="@dimen/padding_6dp"
                                android:src="@drawable/viewpassword"
                                app:tint="#B8B8B8" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_size_12dp"
                            android:background="@drawable/line_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/passwordImage2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_size_10dp"
                                android:src="@drawable/lock_icon"
                                app:tint="#B8B8B8" />

                            <EditText
                                android:id="@+id/p2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/showPassword2"
                                android:layout_toEndOf="@id/passwordImage2"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/iciel_gotham_medium"
                                android:hint="New Password"
                                android:inputType="textPassword"
                                android:maxLength="16"
                                android:maxLines="1"
                                android:padding="12dp"
                                android:textSize="@dimen/text_size_14sp" />


                            <ImageView
                                android:id="@+id/showPassword2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/padding_6dp"
                                android:layout_marginEnd="@dimen/padding_6dp"
                                android:src="@drawable/viewpassword"
                                app:tint="#B8B8B8" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_size_12dp"
                            android:background="@drawable/line_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/passwordImage3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_size_10dp"
                                android:src="@drawable/lock_icon"
                                app:tint="#B8B8B8" />

                            <EditText
                                android:id="@+id/p3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/showPassword3"
                                android:layout_toEndOf="@id/passwordImage3"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/iciel_gotham_medium"
                                android:hint="Confirm Password"
                                android:inputType="textPassword"
                                android:maxLength="16"
                                android:maxLines="1"
                                android:padding="12dp"
                                android:textSize="@dimen/text_size_14sp" />


                            <ImageView
                                android:id="@+id/showPassword3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/padding_6dp"
                                android:layout_marginEnd="@dimen/padding_6dp"
                                android:src="@drawable/viewpassword"
                                app:tint="#B8B8B8" />


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/btnUpdate"
                            android:layout_width="180dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_size_20dp"
                            android:layout_marginBottom="@dimen/margin_size_12dp"
                            android:background="@drawable/btn_bg"
                            android:fontFamily="@font/iciel_gotham_medium"
                            android:gravity="center"
                            android:text="CHANGE PASSWORD"
                            android:textColor="@color/white" />


                    </LinearLayout>


                </ScrollView>

                <!--            </LinearLayout>-->


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</layout>